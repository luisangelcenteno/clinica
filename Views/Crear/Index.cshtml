@model clinica.Models.Usuario
@{
    ViewData["Title"] = "Crear cuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section section-signup page-header" style="margin-top: 50px; background-image: url('https://www.rumbosdelperu.com/wp-content/uploads/2020/10/RN-Tambopata.jpg'); ">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <div class="card card-login">
                    <form class="form" asp-action="Create" method="post" style="min-height: 720px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-header card-header-primary text-center">
                            <h4 class="card-title">Crear cuenta</h4>
                        </div>
                        <p class="description text-center">Clinica Veterinaria</p>
                        @if (TempData["mensaje"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["mensaje"]
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        <div class="card-body mr-0 ml-0">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Nombre">Nombres: <b class="text-danger">(*)</b></label>
                                    <input type="text" class="form-control" asp-for="Nombre" placeholder="Escribe aquí">
                                    <span class="text-danger" asp-validation-for="Nombre"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Appaterno">Ap. Paterno: <b class="text-danger">(*)</b></label>
                                    <input type="text" class="form-control" asp-for="Appaterno" placeholder="Escribe aquí">
                                    <span class="text-danger" asp-validation-for="Appaterno"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Apmaterno">Ap. Materno: <b class="text-danger">(*)</b></label>
                                    <input type="text" class="form-control" asp-for="Apmaterno" placeholder="Escribe aquí">
                                    <span class="text-danger" asp-validation-for="Apmaterno"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Email">Email: <b class="text-danger">(*)</b></label>
                                    <input type="email" class="form-control" asp-for="Email" placeholder="Escribe aquí">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Direccion">Dirección: <b class="text-danger">(*)</b></label>
                                    <input type="text" class="form-control" asp-for="Direccion" placeholder="Escribe aquí">
                                    <span class="text-danger" asp-validation-for="Direccion"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Telefono">Teléfono: <b class="text-danger">(*)</b></label>
                                    <input type="text" class="form-control" asp-for="Telefono" placeholder="Escribe aquí">
                                    <span class="text-danger" asp-validation-for="Telefono"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Contrasena">Contraseña: <b class="text-danger">(*)</b></label>
                                    <input type="password" class="form-control" asp-for="Contrasena" placeholder="Escribe aquí">
                                    <span class="text-danger" asp-validation-for="Contrasena"></span>
                                </div>
                            </div>
                        </div>
                        <div class="footer text-center">
                            <button type="submit" class="btn btn-primary btn-wd btn-lg m-3">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
