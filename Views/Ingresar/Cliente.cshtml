
@{
    ViewData["Title"] = "Cliente";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="container" style="margin-top: 100px;">
    <h2 class="font-weight-bold p-2"><i class="fa fa-home"></i> Dashboard</h2>
    <div class="row">
        <div class="col-sm-4">
            <div class="card card-nav-tabs">
                <div class="card-header card-header-success">Mi perfil</div>
                <div class="card-body">
                    <p class="card-text">Mi información personal.</p>
                    <a asp-area="" asp-controller="ingresar" asp-action="miperfil" class="btn btn-primary btn-sm">Ir a la página</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card card-nav-tabs">
                <div class="card-header card-header-rose">Mis pedidos</div>
                <div class="card-body">
                    <p class="card-text">Mis pedidos realizados.</p>
                    <a asp-area="" asp-controller="cliente" asp-action="pedidos" class="btn btn-primary btn-sm">Ir a la página</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card card-nav-tabs">
                <div class="card-header card-header-info">Seguridad</div>
                <div class="card-body">
                    <p class="card-text">Cambiar contraseña.</p>
                    <a asp-area="" asp-controller="ingresar" asp-action="password" class="btn btn-primary btn-sm">Ir a la página</a>
                </div>
            </div>
        </div>
    </div>
</div>



