
@{
    ViewData["Title"] = "Password";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container bg-white" style="padding-top: 80px;">
    <h2><i class="fa fa-lock"></i> Mi Contraseña</h2><br />
    <p class="text-primary">Proceso de seguridad.</p>
    <hr />
    <div class="row mb-5">
        <div class="col-lg-8 mb-5 pl-5">
            <div class="row">
                <div class="col-sm-10">
                    <div class="form-group row">
                        <label for="unombre" class="col-sm-4 col-form-label">Contraseña actual: </label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="cactual">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="upaterno" class="col-sm-4 col-form-label">Nueva contraseña: </label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="ncontra">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="upaterno" class="col-sm-4 col-form-label">Repetir contraseña: </label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="rcontra">
                        </div>
                    </div>
                    <div class="form-group row">
                        <button class="btn btn-info btn-round btn-sm"><i class="fa fa-edit"></i> Cambiar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



