
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section section-signup page-header" style="margin-top: 50px; background-image: url('https://www.hola.com/imagenes/viajes/2014052771541/fotogaleria-peru-iquitos-ica-imagenes/0-271-458/imagen1-a.jpg?filter=ds75'); ">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-6 mx-auto">
                <div class="card card-login">
                    <form class="form" style="min-height: 420px;">
                        <div class="card-header card-header-primary text-center">
                            <h4 class="card-title">Login</h4>
                        </div>
                        <p class="description text-center">Clinica Veterinaria</p>
                        <div class="card-body">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">mail</i>
                                    </span>
                                </div>
                                <input type="email" class="form-control" placeholder="Email">
                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">lock_outline</i>
                                    </span>
                                </div>
                                <input type="password" class="form-control" placeholder="Password" autocomplete="">
                            </div>
                        </div>
                        <div class="footer text-center">
                            <a asp-area="" asp-controller="ingresar" asp-action="cliente" class="btn btn-primary btn-lg">Ingresar</a><br>
                            <a asp-area="" asp-controller="ingresar" asp-action="recuperar">¿Olvidaste la contraseña?</a><br>
                            <a asp-area="" asp-controller="ingresar" asp-action="dashboard">Modo administrador</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>