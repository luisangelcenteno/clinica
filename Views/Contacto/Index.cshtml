@model clinica.Models.Contacto
@{ ViewData["Title"] = "Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<br />
<br />
<br />
<style>
    .input {
        background-color: #fff;
        border-color: #dbdbdb;
        color: #363636;
        width: 60%;
        border-radius: 5px
    }

    .button.is-primary {
        background-color: #28A745;
        border-color: transparent;
        color: white;
    }
</style>
<div class="container-fluid">
    <div id="mapa" style="margin-top: 70px;">
        <div class="row-fluid">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3901.688782206387!2d-77.0390694845663!3d-12.06492114552495!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c8ea665add81%3A0xc377738eed21bb7f!2sUtp%20Central!5e0!3m2!1ses!2spe!4v1621919410015!5m2!1ses!2spe" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto mt-4">
                <div class="card card-contacto">
                    <form method="post" asp-action="Create" class="form" style="min-height: 520px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-header card-header-primary text-center">
                            <h4 class="card-title">Contacto</h4>
                        </div>
                        <p class="description text-center">Clinica Veterinaria</p>
                        @if (TempData["mensaje"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["mensaje"]
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        <div class="card-body mr-0 ml-0 mb-5">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Nombre">Nombres completos: <b class="text-danger">(*)</b></label>
                                    <input type="text" class="form-control" asp-for="Nombre" placeholder="Escribe aquí" maxlength="100">
                                    <span class="text-danger" asp-validation-for="Nombre"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Celular">Celular: <b class="text-danger">(*)</b></label>
                                    <input type="text" class="form-control" asp-for="Celular" placeholder="Escribe aquí" maxlength="9">
                                    <span class="text-danger" asp-validation-for="Celular"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Correo">Correo Electrónico: <b class="text-danger">(*)</b></label>
                                    <input type="email" class="form-control" asp-for="Correo" autocomplete="off" placeholder="Escribe aquí" maxlength="100">
                                    <span class="text-danger" asp-validation-for="Correo"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Mensaje">Mensaje: <b class="text-danger">(*)</b></label>
                                    <textarea asp-for="Mensaje" class="form-control" rows="5" placeholder="Escribe tu mensaje" maxlength="255"></textarea>
                                    <span class="text-danger" asp-validation-for="Mensaje"></span>
                                </div>
                            </div>
                        </div>
                        <div class="footer text-center">
                            <button type="submit" class="btn btn-primary btn-wd btn-lg m-3">Enviar mensaje</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" /> }
}





